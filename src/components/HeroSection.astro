<script>
  const video = document.getElementById('demo-video') as HTMLVideoElement;
  let hasInteracted = false;

  const unmuteVideo = () => {
    if (!hasInteracted && video) {
      video.muted = false;
      hasInteracted = true;
    }
  };

  video?.addEventListener('click', unmuteVideo);
  video?.addEventListener('pause', unmuteVideo);
</script>
